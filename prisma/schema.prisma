generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id        Int       @id @default(autoincrement())
  name      String
  aboutUs   String
  logo      String
  rating    Float     @default(0)    
  toppers   Toppers[]
  awards    Awards[]
  locationMap  String?
  contact   Contact?  
  facilities Facility[]
  events     Event[]
  images     Image[]
  videos     Video[]
  reviews    Review[]
  area       Place    
  category   SchoolCategory 
}

model Contact {
  id        Int     @id @default(autoincrement())
  email     String
  location  String
  number    String
  website   String?
  facebook  String?
  youtube   String?
  instagram String?
  twitter   String?
  linkedin  String?
  opening   String?
  school    School   @relation(fields: [schoolId], references: [id])
  schoolId  Int      @unique
}


model Image {
  id       Int     @id @default(autoincrement())
  url      String
  schoolId Int
  school   School  @relation(fields: [schoolId], references: [id])
}

model Video {
  id       Int     @id @default(autoincrement())
  src      String
  title    String
  schoolId Int
  school   School  @relation(fields: [schoolId], references: [id])
}

model Review {
  id       Int     @id @default(autoincrement())
  name     String
  message  String
  date     DateTime
  rating   Int    
  schoolId Int
  school   School  @relation(fields: [schoolId], references: [id])
}

model Event {
  id       Int     @id @default(autoincrement())
  title    String
  description String
  image     String?
  schoolId Int
  date     DateTime   @default(now())
  school   School  @relation(fields: [schoolId], references: [id])
}

model Facility {
  id       Int     @id @default(autoincrement())
  name     String
  schoolId Int
  school   School  @relation(fields: [schoolId], references: [id])
}

model Awards {
  id       Int     @id @default(autoincrement())
  title    String
  description String
  image     String?
  schoolId Int
  date     DateTime   @default(now())
  school   School  @relation(fields: [schoolId], references: [id])
}

model Toppers {
  id       Int     @id @default(autoincrement())
  title    String
  description String
  image     String?
  schoolId Int
  date     DateTime   @default(now())
  school   School  @relation(fields: [schoolId], references: [id])
}
enum Place {
  Abids
  Ameerpet
  Bachupally
  Banjara_Hills
  Begumpet
  Charminar
  Gachibowli
  Hitech_City
  Kondapur
  Madhapur
  Mehdipatnam
  Miyapur
  Somajiguda
}

enum SchoolCategory {
  PlaySchool
  PrimaryStateBoard
  HighStateBoard
  InternationalStateBoard
  ResidentialStateBoard
  PrimaryCBSE
  HighCBSE
  InternationalCBSE
  ResidentialCBSE
  PrimaryICSE
  HighICSE
  InternationalICSE
  ResidentialICSE
  PrimaryIGCSE
  HighIGCSE
  InternationalIGCSE
  ResidentialIGCSE
  PreSchoolDayCare
}
